            "assessment_detail_section_id": "assessment-detail-2",
            "assessment_title": "A3: Financial Analysis and Valuation",
            "special_indicators": [],
            "weighting": "<dd>40%</dd>",
            "due_date": "<dd><p> 20/05/2025</p></dd>",
            "learning_objectives": "L03, L04",
