    "learning_outcomes": [
        {
            "number": "LO1.",
            "description": "Identify and contrast different types of financial institutions and their functions within society, and distinguish the levels of regulation for these institutions."
        },
        {
            "number": "LO2.",
            "description": "Examine in detail the on and off balance sheet products of financial institutions."
        },
        {
            "number": "LO3.",
            "description": "Translate the balance sheet activities of financial institutions and select the appropriate risk mitigation techniques to preserve capital or profitability."
        },
        {
            "number": "LO4.",
            "description": "Demonstrate through application how  liquidity, interest rate and credit risks can be mitigated for financial institutions."
        },
        {
            "number": "LO5.",
            "description": "Differentiate financial institution off-balance sheet activities, including securitisation and derivatives, and apply these activities to different scenario settings."
        }
    ],
