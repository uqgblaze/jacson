    "learning_outcomes": [
        {
            "number": "LO1.",
            "description": "Discuss the contribution of relevant social science and humanities disciplines to the theoretical knowledge of tourism, hospitality and events."
        },
        {
            "number": "LO2.",
            "description": "Draw upon theories and approaches from various disciplines to make informed decisions in real-world tourism, hospitality and event situations."
        },
        {
            "number": "LO3.",
            "description": "Incorporate multidisciplinary thinking to solve tourism, hospitality and event problems, by acknowledging and valuing the various approaches taken by different disciplines to the same problem."
        },
        {
            "number": "LO4.",
            "description": "Utilise interdisciplinary reasoning to integrate perspectives from multiple disciplines to address complex challenges and capitalise on opportunities."
        }
    ],
