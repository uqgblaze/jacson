    "learning_outcomes": [
        {
            "number": "LO1.",
            "description": "Understand the financial objective of the firm, and the key decision rules that stem from this objective."
        },
        {
            "number": "LO2.",
            "description": "Apply financial mathematics and use it for valuation of securities."
        },
        {
            "number": "LO3.",
            "description": "Explain and apply the capital budgeting process techniques to complex valuation situations including calculating the weighted average cost of capital."
        },
        {
            "number": "LO4.",
            "description": "Understand the concepts of risk in a financial context, and be able to compare and apply the various approaches to manage these risks."
        },
        {
            "number": "LO5.",
            "description": "Work successfully in a team."
        }
    ],
