    "learning_outcomes": [
        {
            "number": "LO1.",
            "description": "Appreciate how the economic environment influences the financial risks faced by a corporation."
        },
        {
            "number": "LO2.",
            "description": "Understand and measure the impact of interest rate changes on the value of fixed income securities."
        },
        {
            "number": "LO3.",
            "description": "Understand how to use futures and swaps to hedge interest rate risk."
        },
        {
            "number": "LO4.",
            "description": "In teams, appreciate how to play the role of central treasury in the efficient management of a portfolio of fixed interest securities."
        },
        {
            "number": "LO5.",
            "description": "Understand how a range of financial products can be employed to manage foreign exchange and commodity price risk."
        },
        {
            "number": "LO6.",
            "description": "Understand a variety of derivative products and in what situations they are employed."
        },
        {
            "number": "LO7.",
            "description": "Understand the financial crisis and the role derivatives played in it."
        }
    ],
